<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <EditText
            android:id="@+id/txt_speech_results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine|textNoSuggestions"
            android:text="Name"
            android:maxWidth="100dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:editable="false"
            android:textSize="15dp"
            android:visibility="invisible"
           />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </RelativeLayout>

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="66dp"
        android:height="100px"
        android:fontFamily="sans-serif"
        android:foreground="?android:attr/textColorHighlightInverse"
        android:foregroundTint="?android:attr/colorActivatedHighlight"
        android:lineSpacingExtra="8sp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="18sp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/txt_pace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt_filler_count"
        android:height="100px"
        android:fontFamily="sans-serif"
        android:text="TextView"
        android:textSize="18sp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/txt_time_mgmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt_pace"
        android:height="100px"
        android:fontFamily="sans-serif"
        android:text="TextView"
        android:textSize="18sp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/txt_filler_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_total_word"
        android:height="100px"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="8sp"
        android:text="TextView"
        android:textSize="18sp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/text_total_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt_time"
        android:height="100px"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="8sp"
        android:text="TextView"
        android:textSize="18sp"
        android:typeface="monospace" />

    <Button
        android:id="@+id/btn_startOver1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Over"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClick_startOver" />

    <Button
        android:id="@+id/btn_time_mgmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="89dp"
        android:layout_marginStart="89dp"
        android:layout_alignBaseline="@+id/txt_time_mgmt"
        android:layout_alignBottom="@+id/txt_time_mgmt"
        android:layout_alignLeft="@+id/btn_startOver1"
        android:layout_alignStart="@+id/btn_startOver1" />

</RelativeLayout>